.page{
  padding-bottom: 0!important;
  overflow: hidden;
  }

// 导航栏
.sidebar-heading{
  line-height: 56px;
}
.sidebar-links li a{
   padding-left: 1.5rem!important;
  transition: .15s ease-out;
  line-height: 56px;
}
a.sidebar-link.active {
  background: rgba(0,205,150,.06);
  padding-left: 2rem!important;
}

// 内容区域
.theme-default-content:not(.custom){
  padding: 40px 80px;
  padding-bottom: 0!important;
  position: relative;
}

.page-nav, .page-edit{
  display: none
}

// 表格
table {
  display: table;
  border-collapse: collapse;
  width: 100%;
  background-color: #fff;
  font-size: 14px;
  margin-bottom: 45px;
  line-height: 1.5em;
  thead,tbody{
    width: 100%;
  }
  strong {
    font-weight: normal;
  }
  tr{
    border: 0;
  }
  tr:nth-child(2n){
    background:transparent;
  }
  td,
  th {
    border: 0;
    border-bottom: 1px solid #dcdfe6;
    padding: 15px;
    // max-width: 250px;
  }

  th {
    text-align: left;
    white-space: nowrap;
    color: #909399;
    font-weight: normal;
  }

  td {
    color: #606266;
  }

  th:first-child,
  td:first-child {
    padding-left: 10px;
  }
}